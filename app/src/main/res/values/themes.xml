<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MisFinanzas" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_variant</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="shapeAppearanceOverlay">@style/RoundedShape</item>
    </style>

    <style name="RoundedShape">
        <item name="cornerSize">12dp</item>
    </style>
</resources>
