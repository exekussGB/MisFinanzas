<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvRazonSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvRut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"/>

    <!-- BOTÃ“N NUEVO: VER DASHBOARD -->
    <Button
        android:id="@+id/btnVerDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Panel Financiero"
        android:minHeight="80dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvDetalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"/>
    </ScrollView>

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Datos Legales"
        android:minHeight="80dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Empresa"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="#FF0000"
        android:minHeight="80dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:minHeight="80dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"/>

</LinearLayout>
