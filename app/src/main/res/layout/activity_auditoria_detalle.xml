<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F8F9FA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de Auditoría"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:textColor="@color/primary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- INFO BÁSICA -->
            <TextView
                android:id="@+id/tvDetalleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:background="@drawable/rounded_card"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"/>

            <!-- DATO ANTERIOR -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALOR ANTERIOR (JSON)"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvJsonAnterior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:typeface="monospace"
                android:padding="16dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="16dp"/>

            <!-- DATO NUEVO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALOR NUEVO (JSON)"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvJsonNuevo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:typeface="monospace"
                android:padding="16dp"
                android:background="#E8F5E9"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnVolverLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar Detalle"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</LinearLayout>
