<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Empresa"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etRazonSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Razón Social (Obligatorio)" />

        <EditText
            android:id="@+id/etRut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="RUT Empresa (Obligatorio)" />

        <EditText
            android:id="@+id/etGiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giro (Obligatorio)" />

        <EditText
            android:id="@+id/etTipoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo Empresa (EIRL, SpA, etc)" />

        <EditText
            android:id="@+id/etFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha Inicio (YYYY-MM-DD)"
            android:inputType="date" />

        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección" />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etRepresentante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Representante Legal" />

        <EditText
            android:id="@+id/etRegimen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Régimen Tributario" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Afecta a IVA"
            android:layout_marginTop="8dp"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spAfectaIva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCrearEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Empresa"
            android:layout_marginTop="24dp"
            android:minHeight="80dp"
            android:textSize="18sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnVolverEmpresas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:minHeight="80dp"
            android:textSize="18sp"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>
