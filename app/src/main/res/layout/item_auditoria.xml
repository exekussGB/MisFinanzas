<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivAuditoriaIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_info_details" />

            <TextView
                android:id="@+id/tvAuditoriaOperacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivAuditoriaIcon"
                android:layout_marginStart="8dp"
                android:text="OPERACION"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/tvAuditoriaFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Fecha"
                android:textSize="11sp"
                android:textColor="#888888"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvAuditoriaTabla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tabla: Movimientos"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvAuditoriaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario: email@ejemplo.com"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:textColor="#666666"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anterior"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvDatoAnterior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EEEEEE"
                android:layout_marginHorizontal="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuevo"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"/>
                <TextView
                    android:id="@+id/tvDatoNuevo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
