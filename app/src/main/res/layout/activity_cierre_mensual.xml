<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F8F9FA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de Cierre Mensual"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:textColor="@color/primary"/>

    <!-- SELECCIÓN DE PERÍODO -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Período a gestionar:"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvPeriodoCierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-05"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/rounded_card"
                android:backgroundTint="#EEEEEE"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ESTADO DEL PERÍODO -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/layoutEstadoPeriodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvLabelEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESTADO"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"/>

            <TextView
                android:id="@+id/tvValorEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABIERTO"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvInfoCierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El período permite ingresos y ediciones."
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- ACCIONES -->
    <Button
        android:id="@+id/btnValidarYEjecutarCierre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar Período Contable"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/primary"/>

    <Button
        android:id="@+id/btnReabrirPeriodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reabrir Período"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:textColor="@color/error"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <Button
        android:id="@+id/btnVolverCierre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <ProgressBar
        android:id="@+id/pbCierre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
